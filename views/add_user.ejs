<%- include('layout/header') %>
<div class="container mt-5">
  <div class="d-flex justify-content-center py-5">
    <form class="shadow p-3" action="/add" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-12 mb-2">
          <div class="text-center rounded">
            <h5 class="font-bold">Add New User</h5>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group mb-3">
            <label class="mb-1" for="name">Name</label>
            <input required type="text" name="name" class="form-control" id="name" aria-describedby="name" placeholder="Enter name" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group mb-3">
            <label class="mb-1" for="email">Email</label>
            <input required type="email" name="email" class="form-control" id="email" aria-describedby="name" placeholder="Enter email" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group mb-3">
            <label class="mb-1" for="phone">Phone</label>
            <input required type="tel" name="phone" class="form-control" id="phone" aria-describedby="phone" placeholder="Enter phone" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group mb-3">
            <label class="mb-1" for="image">Select Image</label>
            <input required type="file" class="form-control" name="image" id="image" aria-describedby="image" />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <button class="btn btn-primary w-100">Add</button>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include('layout/footer') %>
